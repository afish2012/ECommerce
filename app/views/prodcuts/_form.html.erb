<%= form_with(model: prodcut, local: true) do |form| %>
  <% if prodcut.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(prodcut.errors.count, "error") %> prohibited this prodcut from being saved:</h2>

      <ul>
      <% prodcut.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select(:category_id, @categories.collect{ |c| [c.name, c.id]}, {include_blank: "Select Category"}, required: true) %>
  </div>

<div class="form-group "
<%= form.label :image %>
<%= form.file_field :image, required: true %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
